<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE building SYSTEM "building.dtd">
<building worker="MINER" mine="true">
	<ground groundtype="MOUNTAIN" />
	<ground groundtype="MOUNTAINBORDER" />
	<ground groundtype="MOUNTAINBORDEROUTER" />
	<ground groundtype="GRASS"/>
	<ground groundtype="EARTH"/>
	<ground groundtype="FLATTENED"/>

	<blocked dx="1" dy="2" />
	<blocked dx="2" dy="1" />
	<blocked dx="2" dy="0" />
	<blocked dx="1" dy="1" />
	<blocked dx="1" dy="0" />
	<blocked dx="1" dy="-1" />
	<blocked dx="0" dy="-2" />
	<blocked dx="0" dy="-1" />
	<blocked dx="0" dy="0" />
	<blocked dx="0" dy="1" />
	<blocked dx="-2" dy="0" />
	<blocked dx="-1" dy="0" />
	<blocked dx="-2" dy="-1" />
	<blocked dx="-2" dy="-3" />
	<blocked dx="-2" dy="-2" />
	<blocked dx="-1" dy="-1" />
	<blocked dx="-1" dy="-2" />
	<blocked dx="-1" dy="-3" />
	<blocked dx="0" dy="2" />
	<blocked dx="0" dy="3" />
	<blocked dx="-2" dy="1" />

	<blocked dx="-1" dy="1" block="false" />
	<blocked dx="-1" dy="2" block="false" />
	<blocked dx="2" dy="3" block="false" />
	<blocked dx="3" dy="2" block="false" />
	<blocked dx="3" dy="1" block="false" />
	<blocked dx="2" dy="-1" block="false" />
	<blocked dx="1" dy="-2" block="false" />
	<blocked dx="0" dy="-3" block="false" />
	<blocked dx="-1" dy="-4" block="false" />
	<blocked dx="-2" dy="2" block="false" />
	<blocked dx="-3" dy="-4" block="false" />
	<blocked dx="-2" dy="-4" block="false" />
	<blocked dx="-3" dy="-3" block="false" />
	<blocked dx="-3" dy="0" block="false" />
	<blocked dx="2" dy="2" block="false" />
	<blocked dx="1" dy="3" block="false" />
	<blocked dx="3" dy="0" block="false" />
	<blocked dx="1" dy="4" block="false" />
	<blocked dx="-1" dy="3" block="false" />
	<blocked dx="-3" dy="-1" block="false" />
	<blocked dx="-3" dy="-2" block="false" />

	<door dx="-1" dy="1" />

	<constructionStack dx="-2" dy="2" material="PLANK" buildrequired="4" />
	<constructionStack dx="1" dy="4" material="STONE" buildrequired="1" />
	
	<requestStack dx="1" dy="3" material="BREAD" />
	<requestStack dx="2" dy="2" material="MEAT" />
	<requestStack dx="3" dy="1" material="FISH" />
	
	<offerStack dx="-1" dy="3" material="COAL" />

	<bricklayer dx="-2" dy="1" direction="NORTH_EAST" />
	<bricklayer dx="0" dy="3" direction="NORTH_EAST" />
	<bricklayer dx="2" dy="3" direction="NORTH_WEST" />
	<bricklayer dx="3" dy="2" direction="NORTH_WEST" />

	<flag dx="-3" dy="-5" />

	<buildmark dx="1" dy="3" />
	<buildmark dx="2" dy="0" />
	<buildmark dx="-2" dy="-4" />
	<buildmark dx="-3" dy="-1" />
    
    <image file="14" for="GUI" type="GUI" sequence="51" image="0" />
    <image file="13" for="FINAL" type="SETTLER" sequence="6" image="0" />
    <image file="13" for="BUILD" type="SETTLER" sequence="6" image="1" />

 
    <!-- start with going home -->
    <startjob name="gohome" />
    
    <job name="gohome" 				type="GO_TO" 				successjob="hide" 				failjob="hide" 		dx="-1" dy="1" />
    <job name="hide"				type="HIDE" 				successjob="waitHome" 			failjob="waitHome" />
    <job name="waitHome" 			type="WAIT" 				successjob="checkHasStackSpace" failjob="hide" 		time="3" />
    
    <job name="checkHasStackSpace"	type="NOT_FULL" 			successjob="checkHasFood" 		failjob="waitHome"	dx="-1" dy="3" />
    <job name="checkHasFood" 		type="TRY_TAKING_FOOD" 		successjob="startMining"		failjob="waitHome"  foodOrder="BREAD,MEAT,FISH"/>

    <job name="startMining" 		type="TRY_TAKING_RESOURCE" 	successjob="successfulMining1" 	failjob="failedMining1" />
	

    <!-- successful mining -->
    <job name="successfulMining1" 	type="SET_MATERIAL" 		successjob="successfulMining2"	failjob="gohome" 	material="COAL" />
    <job name="successfulMining2" 	type="SHOW" 				successjob="successfulMining3"	failjob="gohome" 	dx="-1" dy="1" />
    <job name="successfulMining3" 	type="WALK" 				successjob="successfulMining4"	failjob="gohome" 	direction="SOUTH_WEST" />
    <job name="successfulMining4" 	type="WALK" 				successjob="successfulMining5"	failjob="gohome" 	direction="SOUTH_WEST" />
    <job name="successfulMining5" 	type="LOOK_AT" 				successjob="successfulMining6"	failjob="gohome" 	direction="SOUTH_WEST" />
    <job name="successfulMining6" 	type="DROP" 				successjob="successfulMining7"	failjob="gohome" 	material="COAL" />
    <job name="successfulMining7" 	type="WALK" 				successjob="successfulMining8"	failjob="gohome" 	direction="NORTH_EAST" />
    <job name="successfulMining8" 	type="WALK" 				successjob="hide" 				failjob="hide" 		direction="NORTH_EAST" />

    <!-- failed mining -->
    <job name="failedMining1" 		type="SET_MATERIAL" 		successjob="failedMining2" 		failjob="gohome" 	material="BASKET" />
    <job name="failedMining2" 		type="SHOW" 				successjob="failedMining3" 		failjob="gohome" 	dx="-1" dy="1" />
    <job name="failedMining3" 		type="WALK" 				successjob="failedMining4" 		failjob="gohome" 	direction="SOUTH_WEST" />
    <job name="failedMining4" 		type="LOOK_AT" 				successjob="failedMining5" 		failjob="gohome" 	direction="SOUTH_WEST" />
    <job name="failedMining5" 		type="PLAY_ACTION1" 		successjob="failedMining6" 		failjob="gohome" 	time="5.0" />
    <job name="failedMining6" 		type="WALK" 				successjob="hide" 				failjob="hide" 		direction="NORTH_EAST" />
</building>
