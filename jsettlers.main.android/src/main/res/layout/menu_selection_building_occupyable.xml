<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <jsettlers.main.android.gameplay.customviews.InGameButton
            android:id="@+id/image_view_priority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_view_building_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="TextView" />

        <jsettlers.main.android.gameplay.customviews.InGameButton
            android:id="@+id/image_view_destroy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_occupiers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_infantry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/image_view_building"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <LinearLayout
            android:id="@+id/layout_bowmen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/layout_occupier_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <jsettlers.main.android.gameplay.customviews.InGameButton
                    android:id="@+id/image_view_maximum_soldiers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <jsettlers.main.android.gameplay.customviews.InGameButton
                    android:id="@+id/image_view_add_swordsman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <jsettlers.main.android.gameplay.customviews.InGameButton
                    android:id="@+id/image_view_add_bowman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <jsettlers.main.android.gameplay.customviews.InGameButton
                    android:id="@+id/image_view_add_pikeman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <jsettlers.main.android.gameplay.customviews.InGameButton
                    android:id="@+id/image_view_minimum_soldiers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <jsettlers.main.android.gameplay.customviews.InGameButton
                    android:id="@+id/image_view_remove_swordsman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <jsettlers.main.android.gameplay.customviews.InGameButton
                    android:id="@+id/image_view_remove_bowman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <jsettlers.main.android.gameplay.customviews.InGameButton
                    android:id="@+id/image_view_remove_pikeman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/layout_materials"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_button_size"
            android:orientation="horizontal"
            android:layout_margin="8dp" />
            android:layout_gravity="bottom" />

    </FrameLayout>


</LinearLayout>